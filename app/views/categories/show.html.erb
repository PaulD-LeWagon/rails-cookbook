<%= render 'layouts/jumbatron', title: @category.name.titleize, sub_title: 'Add your favourite recipe!' %>

<div class="container flex-column">

  <div class="sub-header d-flex justify-content-between align-items-center">
    <h2>Recipes</h2>
    <%= link_to '+ Add a Recipe', new_category_bookmark_path(@category), class: "ms-auto btn btn-primary" %>
  </div>

  <div class="grid-container">
    <% @category.recipes.each do |recipe| %>

      <div class="card d-flex flex-column justify-content-between">
        <img src="<%= recipe.image_url %>" alt="<%= recipe.name %>">
        <h4><%= recipe.name %></h4>
        <p><%= recipe.description %></p>
        <div class="d-flex justify-content-between align-items-end">
          <span class="rating"><%= recipe.rating %></span>
          <span class="controls"><%= link_to "Delete", bookmark_path(recipe.bookmarks.find { |b| b.category_id == @category.id }), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></span>
        </div>
      </div>

    <% end %>
  </div>

</div>
